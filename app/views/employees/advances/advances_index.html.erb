<div>
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <% content_for :title, "Advances" %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Advances</h1>
  </div>
  <div class="flex flex-col my-2">
    <div class="relative my-3">
      <input />
    </div>
    <table id="advances" class="min-w-full divide-y">
      <thead>
        <tr>
          <th class="text-start text-xs font-medium">Employee Name</th>
          <th class="text-start text-xs font-medium">Amount</th>
          <th class="text-start text-xs font-medium">Payment</th>
          <th class="text-start text-xs font-medium">Start Date</th>
          <th class="text-start text-xs font-medium">End Date</th>
          <th class="text-start text-xs font-medium">Completed</th>
          <th class="text-start text-xs font-medium">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y" id="general-search">
        <% @advances.each do |advance| %>
          <%= render partial: "advance_row", locals: {advance: advance} %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>