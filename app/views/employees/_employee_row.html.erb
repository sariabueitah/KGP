<tr id="<%= dom_id employee %>" class="hover:bg-gray-100">
  <td class="whitespace-nowrap text-sm font-medium">
    <div><%= employee.short_name %></div>
    <div><%= employee.ar_short_name %></div>
  </td>
  <td class="whitespace-nowrap text-sm font-medium"><%= employee.email%></div>
  <td class="whitespace-nowrap text-sm font-medium"><%= employee.nid %></td>
  <td class="whitespace-nowrap text-sm font-medium">
    <div><%= employee.phone_number %></div>
    <div><%= employee.e_phone_number %></div>
  </td>
  <td class="whitespace-nowrap text-sm font-medium"><%= link_to "Show", employee, class: "my-2 font-medium" %></td>
</tr>