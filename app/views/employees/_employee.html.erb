<div id="<%= dom_id employee %>">
  <div class="flex">
    <div class="rounded border-gray-400 bg-gray-300 mr-2">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-40 p-4">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z" />
      </svg>
    </div>
    <table class="mx-2">
      <tr>
        <td>Name:</strong>
        <td class="px-4"><%= employee.full_name %></td>
      </tr>
      <tr>
        <td>Name Arabic:</td>
        <td class="px-4"><%= employee.ar_full_name %></td>
      </tr>
      <tr>
        <td>Position:</td>
        <td class="px-4"><%= employee.position %></td>
      </tr>
      <tr>
        <td>Email:</td>
        <td class="px-4"><%= employee.email %></td>
      </tr>
      <tr>
        <td>Phone Number:</td>
        <td class="px-4"><%= employee.phone_number %></td>
      </tr>
    </table>
  </div>
  <table class="mx-2 my-2">
    <tr>
      <td>Has Dependants:</strong>
      <td class="px-4"><%= employee.has_dependants %></td>
      <td>Marital Status:</strong>
      <td class="px-4"><%= employee.marital_status %></td>
    </tr>
    <tr>
      <td>Social Security Number:</strong>
      <td class="px-4"><%= employee.social_security_number %></td>
      <td>Income Tax Number:</strong>
      <td class="px-4"><%= employee.income_tax_number %></td>
    </tr>
    <% if employee.national %>
      <tr>
        <td>National ID:</strong>
        <td class="px-4"><%= employee.nid %></td>
      </tr>
    <%else%>
      <tr>
        <td>Nationality:</td>
        <td class="px-4"><%= employee.nationality %></td>
        <td>Passport Number:</td>
        <td class="px-4"><%= employee.passport_number %></td>
      </tr>
    <%end%>
  </table>
</div>
