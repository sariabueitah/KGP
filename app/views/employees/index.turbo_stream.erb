<%= turbo_stream.update "employees" do %>
  <thead>
    <tr>
      <th class="text-start text-xs font-medium">
        <div>
          <%= build_order_link(column: "employees.first_name", label: "Name", model: "employee", url: "employees_path") %>
          <%= sort_indicator("employee", "employees.first_name") %>
        </div>
        <div>
          <%= build_order_link(column: "employees.ar_first_name", label: "Name arabic", model: "employee", url: "employees_path") %>
          <%= sort_indicator("employee", "employees.ar_first_name") %>
        </div>
      </th>
      <th class="text-start text-xs font-medium">
        <%= build_order_link(column: "positions.title", label: "Position", model: "employee", url: "employees_path") %>
        <%= sort_indicator("employee", "positions.title") %>
      </th>
      <th class="text-start text-xs font-medium">Email</th>
      <th class="text-start text-xs font-medium">National ID</th>
      <th class="text-start text-xs font-medium">
        <div>Phone Number</div>
        <div>Emergency Phone Number</div>
      </th>
      <th class="text-start text-xs font-medium">Actions</th>
    </tr>
  </thead>
  <tbody class="divide-y">
    <% @employees.each do |employee| %>
      <%= render "employee_row", employee: employee %>
    <% end %>
  </tbody>
<% end %>