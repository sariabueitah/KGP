<%= form_with(model: employee, class: "contents") do |form| %>
  <% if employee.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>
      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="w-full grid grid-cols-1 md:grid-cols-4 gap-5 my-5">
    <div class="col-span-1">
      <%= form.label :first_name, class: "block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"%>
      <%= form.text_field :first_name, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>
    <div class="col-span-1">
      <%= form.label :father_name, class: "block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"%>
      <%= form.text_field :father_name, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>
    <div class="col-span-1">
      <%= form.label :grandfather_name, class: "block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"%>
      <%= form.text_field :grandfather_name, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>
    <div class="col-span-1">
      <%= form.label :family_name, class: "block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"%>
      <%= form.text_field :family_name, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>
    <div class="col-span-1">
      <%= form.label :arabic_first_name, class: "block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"%>
      <%= form.text_field :ar_first_name, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>
    <div class="col-span-1">
      <%= form.label :arabic_father_name, class: "block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"%>
      <%= form.text_field :ar_father_name, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>
    <div class="col-span-1">
      <%= form.label :arabic_grandfather_name, class: "block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"%>
      <%= form.text_field :ar_grandfather_name, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>
    <div class="col-span-1">
      <%= form.label :arabic_family_name, class: "block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"%>
      <%= form.text_field :ar_family_name, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>
    <div class="col-span-1">
      <%= form.label :email, class: "block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"%>
      <%= form.email_field :email, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>
    <div class="col-span-1">
      <%= form.label :phone_number, class: "block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"%>
      <%= form.text_field :phone_number, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>
    <div class="col-span-1">
      <%= form.label :emergancy_phone_number, class: "block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"%>
      <%= form.text_field :e_phone_number, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>
    <div class="col-span-1">
      <%= form.label :social_security_number, class: "block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"%>
      <%= form.text_field :social_security_number, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>
    <div class="col-span-1">
      <%= form.label :income_tax_number, class: "block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"%>
      <%= form.text_field :income_tax_number, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>
    <div class="col-span-1">
      <%= form.label :marital_status, class: "block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"%>
      <%= form.select :marital_status, options_for_select(Employee.marital_statuses.map {|k, v| [k.humanize.capitalize, v]}), {}, {class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"} %>
    </div>
    <div class="col-span-1">
      <%= form.label :has_dependants, class: "block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"%>
      <%= form.check_box :has_dependants, class: "" %>
    </div>
    <div class="col-span-1">
      <%= form.label :national, class: "block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"%>
      <%= form.check_box :national, class: "" %>
    </div>
    <div class="col-span-1">
      <%= form.label :national_id, class: "block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"%>
      <%= form.text_field :nid, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>
    <div class="col-span-1" data-controller="country">
      <%= form.label :nationality, class: "block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"%>
      <%= form.text_field :nationality, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500", data: {
        action: "focus->country#showList input->country#filterCountries blur->country#hideList keydown.down->country#inputKeyControl",
        country_target: "input"
      }, tabIndex: "0" %>
    </div>
    <div class="col-span-1">
      <%= form.label :passport_number, class: "block uppercase tracking-wide text-gray-700 text-sm font-bold mb-2"%>
      <%= form.text_field :passport_number, class: "ppearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
    </div>
  </div>
  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    <%= link_to "Back to employees", employees_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium cursor-pointer ring-2 hover:ring-blue-500" %>
  </div>
<% end %>